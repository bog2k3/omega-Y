#root {
	size: 100% 100%
	padding: 50 50 50 50
	layout: #main split vertical 10% 1 {
		second: #center_bottom split vertical 85% 1 {
			second: #bottom split vertical 25% 0 {
				second: #buttonsArea list horizontal {
					align: left
				}
			}
		}
	}
	label #title "Join Game" 50 center middle
	container #hostsList {
		transparent: true
		layout: list vertical {
			align: center 
			vertAlign: middle
			spacing: 30
		}
	}
	button "Back" $goBack {
		width: 20%
	}
}